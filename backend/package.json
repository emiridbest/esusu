{
  "name": "@esusu/backend",
  "version": "1.0.0",
  "description": "Esusu Backend Services",
  "main": "lib/index.js",
  "exports": {
    "./lib/database/connection": "./lib/database/connection.ts",
    "./lib/services/transactionService": "./lib/services/transactionService.ts",
    "./lib/services/userService": "./lib/services/userService.ts",
    "./lib/services/groupService": "./lib/services/groupService.ts",
    "./lib/services/notificationService": "./lib/services/notificationService.ts",
    "./lib/services/analyticsService": "./lib/services/analyticsService.ts",
    "./lib/services/electricityPaymentService": "./lib/services/electricityPaymentService.ts",
    "./lib/config/environment": "./lib/config/environment.ts"
  },
  "private": true,
  "scripts": {
    "dev": "node scripts/dev-with-db.js",
    "dev:next": "next dev -p 3001",
    "build": "next build",
    "start": "next start -p 3001",
    "lint": "next lint",
    "deploy:setup": "node ../scripts/deploy-setup.js",
    "db:init": "node -e \"require('./lib/database/connection').default()\"",
    "db:migrate": "node -e \"require('./lib/database/migrations').MigrationService.runMigrations()\"",
    "db:health": "curl -X GET http://localhost:3001/api/db/health 2>/dev/null || echo 'Health endpoint not available'"
  },
  "dependencies": {
    "@ai-sdk/openai": "^1.1.11",
    "@goat-sdk/adapter-vercel-ai": "^0.2.8",
    "@goat-sdk/core": "^0.4.6",
    "@goat-sdk/wallet-evm": "^0.2.6",
    "@goat-sdk/wallet-viem": "^0.2.8",
    "ai": "^4.1.45",
    "dotenv": "^16.4.7",
    "next": "^15.0.0",
    "viem": "1",
    "mongoose": "^8.0.0",
    "ethers": "^6.8.0",
    "nodemailer": "^6.9.0",
    "twilio": "^4.19.0",
    "zod": "^3.22.0",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.25.9",
    "@babel/plugin-proposal-private-methods": "^7.18.6",
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@babel/plugin-transform-class-static-block": "^7.26.0",
    "babel-plugin-transform-typescript-metadata": "^0.3.2",
    "@types/node": "^20",
    "@types/react": "19.1.2",
    "@types/nodemailer": "^6.4.0",
    "eslint": "^8.40.0",
    "eslint-config-next": "^15.0.0",
    "typescript": "^5.0.4"
  }
}
